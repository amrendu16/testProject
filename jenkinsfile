#!groovy

pipeline {
    agent any
    tools {
          maven 'MAVEN_HOME'
          jdk 'JAVA_HOME'
        }

    stages {
        stage("build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install -U"
                sh "java -version"
                sh 'javac -version'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}